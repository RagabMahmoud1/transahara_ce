<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_sync_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='convert_visitor_setting_container']" position="inside">
                <div class="col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="is_auto_sync"/>
                    </div>

                    <div class="o_setting_right_pane" id="field__auto_sync">
                        <label string="Auto Sync" for="is_auto_sync"/>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
