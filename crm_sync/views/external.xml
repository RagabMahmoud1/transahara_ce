    <!--    crm.lead form view -->
    <record id="view_crm_lead_form_inherit_external" model="ir.ui.view">
        <field name="name">view.crm.lead.form.inherit.external</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page>
                    <group>
                        <field name="external_ref"/>
                        <field name="external_id"/>
                        <field name="external_employee_id2"/>
                        <field name="external_employee_name"/>
                        <field name="external_user_id"/>
                        <field name="external_user_name"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!--    crm.lead tree view -->
    <record id="view_crm_lead_tree_inherit_external" model="ir.ui.view">
        <field name="name">view.crm.lead.tree.inherit.external</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="external_ref" optional="hide"/>
                <field name="external_id" optional="hide"/>
                <field name="external_employee_id2" optional="hide"/>
                <field name="external_employee_name" optional="hide"/>
                <field name="external_user_id" optional="hide"/>
                <field name="external_user_name" optional="hide"/>

            </xpath>
        </field>
    </record>

    <!--    res.partner form view -->
    <record id="view_res_partner_form_inherit_external599" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherit.external</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="External References">
                    <group>
                        <field name="external_ref"/>
                        <field name="external_id"/>
                        <field name="external_employee_id2"/>
                        <field name="external_employee_name"/>
                        <field name="external_user_id"/>
                        <field name="external_user_name"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!--    res.partner tree view -->
    <record id="view_res_partner_tree_inherit_external" model="ir.ui.view">
        <field name="name">view.res.partner.tree.inherit.external</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="external_ref" optional="hide"/>
                <field name="external_id" optional="hide"/>
                <field name="external_employee_id2" optional="hide"/>
                <field name="external_employee_name" optional="hide"/>
                <field name="external_user_id" optional="hide"/>
                <field name="external_user_name" optional="hide"/>

            </xpath>
        </field>
    </record>

